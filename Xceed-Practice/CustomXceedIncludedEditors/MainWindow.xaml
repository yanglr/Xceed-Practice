<Window x:Class="WpfWithOnlyXceed_DynamicColumns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWithOnlyXceed_DynamicColumns"
        xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <TextBlock>UserId:</TextBlock>
                <xcdg:CheckBox IsChecked="True"/>
            </StackPanel>

            <DataGrid ItemsSource="{Binding UserCollection}" 
                      CanUserAddRows="false">
            </DataGrid>

        </StackPanel>

    </Grid>
</Window>
